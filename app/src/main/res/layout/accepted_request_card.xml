<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container_accepted_request"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lL_gifs"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.25"
            android:src="@drawable/party_horn2"/>

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.25"
            android:src="@drawable/party_horn"/>

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:rotation="270"
            android:layout_weight="0.25"
            android:src="@drawable/party_horn"/>

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:rotation="270"
            android:layout_weight="0.25"
            android:src="@drawable/party_horn2"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/bg_otw"
        android:scaleType="centerCrop"
        android:alpha="0.8"
        app:layout_constraintTop_toBottomOf="@id/lL_gifs"
        android:id="@+id/iV_accepted_card_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are on your way to accept gwyerhall foodilize request of 2kg food"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/iV_accepted_card_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/tV_accepted_request_title"/>

    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivered"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:id="@+id/btn_accepted_request_delivered"/>
    
    

</androidx.constraintlayout.widget.ConstraintLayout>