<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/pinkdusty"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are on your way to accept gwyerhall foodilize request of 2kg food"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:textColor="@color/black"
        android:id="@+id/tV_accepted_request_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dustygreen"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tV_accepted_request_title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        android:text="Delivered"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tV_accepted_request_delivered"/>

</androidx.constraintlayout.widget.ConstraintLayout>